<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hellotoast.MainActivity"
    tools:layout_editor_absoluteY="89dp">

    <Button
        android:id="@+id/button_toast"
        android:layout_width="320dp"
        android:layout_height="195dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:onClick="showToast"
        android:text="@string/button_label_toast"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />
    <Button
        android:id="@+id/button_zero"
        android:layout_width="303dp"
        android:layout_height="195dp"
        android:onClick="countzero"
        android:text="@string/button_label_zero"
        android:textColor="@android:color/holo_blue_light"
        android:background="@color/colorAccentGray"
        android:textSize="60sp"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="333dp"
        android:layout_height="207dp"
        android:background="@color/colorPrimary"
        android:onClick="countUp"
        android:text="@string/button_label_count"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        tools:layout_editor_absoluteX="623dp"
        tools:layout_editor_absoluteY="-5dp" />



    <TextView
        android:id="@+id/show_count"
        android:layout_width="939dp"
        android:layout_height="1501dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFF00"
        android:gravity="center_horizontal"
        android:text="@string/count_initial_value"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="200sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>
